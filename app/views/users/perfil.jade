extends ../layouts/default
block content
    if (message)
        p #{message}
    div(class="container")
        form.signup.form-horizontal(action="/login" method="POST" class="form-signin")
            h2(class="form-signin-heading") Conecta
            label.control-label(for='email') Email
            input#email(type='text', name='email', class="form-control", placeholder="Correo Electronico", required, autofocus)
            label.control-label(for='password') Password
            input#password(type='password', name='password', class="form-control", placeholder="Password", required)
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Modificar perfil